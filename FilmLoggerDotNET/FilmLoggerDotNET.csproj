<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net7.0</TargetFramework>
    <Version>3.51.1</Version>
    <Nullable>enable</Nullable>
    <ApplicationIcon>Assets\icon.ico</ApplicationIcon>
    <PublishSelfContained>true</PublishSelfContained>
    <PublishSingleFile>true</PublishSingleFile>
    <PublishReadyToRun>true</PublishReadyToRun>
    <OptimizationPreference>Speed</OptimizationPreference>
    <PublishTrimmed>true</PublishTrimmed>
    <TrimMode>partial</TrimMode>
    <EnableSingleFileAnalyzer>true</EnableSingleFileAnalyzer>
    <EnableTrimAnalyzer>true</EnableTrimAnalyzer>
    <TrimmerSingleWarn>false</TrimmerSingleWarn>
    <RuntimeIdentifiers>win10-x64;win10-x86;linux-x64</RuntimeIdentifiers>
    <PlatformTarget>AnyCPU</PlatformTarget>
  </PropertyGroup>
  <ItemGroup>
    <None Remove=".gitignore" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="AsyncImageLoader.Avalonia" Version="3.2.0" />
    <PackageReference Include="Avalonia" Version="11.0.4" />
    <PackageReference Include="Avalonia.Desktop" Version="11.0.4" />
    <!--Condition below is needed to remove Avalonia.Diagnostics package from build output in Release configuration.-->
    <PackageReference Condition="'$(Configuration)' == 'Debug'" Include="Avalonia.Diagnostics" Version="11.0.4" />
    <PackageReference Include="Avalonia.Themes.Fluent" Version="11.0.4" />
    <PackageReference Include="MessageBox.Avalonia" Version="3.1.4" />
    <!--This is uniquely dumb, because FilmLogger uses System.Text.Json rather than Newtonsoft.
    But unfortunately, TMDbLib currently relies on Newtonsoft, and ships with an outdated version
    that includes a security vulnerability. So we're pinning the version here until the package
    maintainer upstream decides that shipping security vulnerabilities to downstream users is
    a bad idea.-->
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    <!--This needs to be included for Linux binaries to run when published-->
    <PackageReference Include="SkiaSharp.NativeAssets.Linux" Version="2.88.4" />
    <!--This library is barely being maintained anymore, but the business logic relies on it.
    If the dev finds a new maintainer then we'll keep it, otherwise I may have to just reimplement
    our subset of API calls myself since I'm not gonna maintain a whole fork if I barely use most of
    the API calls the wrapper exposes.-->
    <PackageReference Include="TMDbLib" Version="2.0.0" />
  </ItemGroup>
  <ItemGroup>
    <AvaloniaResource Include="Assets\blank_poster.png" />
    <AvaloniaResource Include="Assets\icon.png" />
    <AvaloniaResource Include="Assets\TMDb_logo.png" />
  </ItemGroup>
</Project>
